        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_maker"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel  Orientation="Horizontal">
        <Label x:Name="lbl"> Путь к файлу хранения данных</Label>
        <TextBox Width="200" x:Name="tbdb" Text="1"></TextBox>
        <Button Click="Button_Click" Content="Обновить"></Button>
        
    </StackPanel>
        <Button  x:Name="Back" Click="Back_Click"   Content="Back" />
    </StackPanel>


</Window>
